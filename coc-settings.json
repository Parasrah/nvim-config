{
  "diagnostic.displayByAle": true,
  "diagnostic.locationlist": true,
  "coc.preferences.formatOnType": false,
  "npm.binPath": "npm",
  "snippets.userSnippetsDirectory": "~/.config/nvim/coc/ultisnips",
  "coc.preferences.hoverTarget": "float",
  "suggest.floatEnable": true,
  "coc.preferences.useQuickfixForLocations": true,
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmPath": "elm", // optional
        "elmFormatPath": "elm-format", // optional
        "elmTestPath": "elm-test", // optional
        "elmAnalyseTrigger": "change" // optional
      }
    }
  }
}
